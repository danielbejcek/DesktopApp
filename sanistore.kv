<WindowManager>:
    WelcomeScreen:
    MainScreen:
    InventoryScreen:
    ExportScreen:
    ImportScreen:
    FinalExportScreen:

<WelcomeScreen>:
    name: "First"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "Images/First.png"
    BoxLayout:
        orientation: "vertical"
        id: LY1
        padding: (100,100)
        spacing: 50
        size_hint: (1,1)

<MainScreen>:
    name: "Second"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "Images/Menu.jpg"
    FloatLayout:
        id: LY2

<InventoryScreen>:
    name: "Third"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "Images/inventory_screen_2.png"

    FloatLayout:
        id: LY3
        orientation: "vertical"
        padding: (0,0)
        spacing: 0

    ScrollView:
        id: SW1
        bar_width: 0
        bar_color: (0,0,0,0)
        do_scroll_x: False
        do_scroll_y: True
        scroll_type: ["content"]
        size_hint: (.48, .8)

        GridLayout:
            id: LY4
            orientation: "lr-tb"
            padding: (0,0,10,50)
            spacing: (0,0)
            pos_hint: {"center_x": .2,"center_y": .8}
            size_hint: (1,None)
            height: self.minimum_height

    GridLayout:
        id: LY5
        orientation: "lr-tb"
        cols: 4
        padding: (0,120,20,0)
        spacing: (0,15)
        pos_hint: {"center_x": .25,"center_y": .5}
        size_hint: (.45,.8)

<ImportScreen>:
    name: "Fourth"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "Images/importscreen_edit_2.png"

    FloatLayout:
        id: LY55

    FloatLayout:
        id: LY6
        Image:
            id: merge_docs
            source: "Images/merge_documents.png"
            size_hint: (.2,.19)
            opacity: 0
            border: (0,0,0,0)
            pos_hint:{"center_x": .549, "center_y": .3}


        Label:
            id: component_text
            text: root.component_file_text
            size_hint: (.2, .2)
            font_size: 30
            pos_hint:{"center_x": .78, "center_y": .3}

        GridLayout:
            id: LY65
            cols: 2
            padding: (0,0,0,0)
            size_hint: (.8,.6)
            pos_hint: {"center_x": .5, "center_y": .5}

    BoxLayout:
        id: LY7
        orientation: "vertical"
        size_hint: (.54,.54)
        pos_hint: {"center_x": .21, "center_y": .53}
        canvas.before:
            Color:
                rgba: 0,0,1,0
            Line:
                width: 5
                rectangle: self.x, self.y, self.width, self.height

<ExportScreen>:
    name: "Fifth"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "Images/export_screen.png"

    FloatLayout:
        id: LY8

    ScrollView:
        id: SW2
        bar_width: 1
        bar_color: (1,1,1,1)
        do_scroll_x: False
        do_scroll_y: True
        scroll_type: ["content"]
        size_hint: (.28, .67)
        pos_hint: {"center_x": .14,"center_y": .45}
        padding: (0,0,0,100)

        GridLayout:
            id: LY9
            cols: 2
            orientation: "lr-tb"
            padding: (0,0,0,0)
            spacing: (0,0)
            pos_hint: {"center_x": .6,"center_y": .51}
            size_hint: (1,None)
            height: self.minimum_height

    ScrollView:
        id: SW3
        bar_width: 1
        bar_color: (1,1,1,1)
        do_scroll_x: False
        do_scroll_y: True
        scroll_type: ["content"]
        effect_cls: "ScrollEffect"
        size_hint: (1, .65)
        pos_hint: {"center_x": .85,"center_y": .45}
        padding: (0,0,0,0)

        GridLayout:
            id: LY10
            cols: 3
            orientation: "lr-tb"
            padding: (0,0,0,0)
            spacing: (10,10)
            pos_hint: {"center_x": .5,"center_y": .45}
            size_hint: (.4,0)
            row_default_height: 1
            height: self.minimum_height

<FinalExportScreen>:
    name: "Sixth"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "Images/final_export_screen.png"
    FloatLayout:
        id: LY11

    GridLayout:
        id: LY12
        cols: 2
        orientation: "lr-tb"
        pos_hint: {"center_x": .192,"center_y": .35}
        size_hint: (.3,.5)
        canvas.before:
            Color:
                rgba: 0,0,0,1
            Line:
                width: 2
                rectangle: self.x, self.y, self.width, self.height

    FloatLayout:
        id: LY13
        size_hint: (.37,.79)
        pos_hint: {"center_x": .195,"center_y": .415}
        canvas.before:
            Color:
                rgba: 0,1,0,0
            Line:
                width: 2
                rectangle: self.x, self.y, self.width, self.height