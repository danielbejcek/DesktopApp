<WindowManager>:
    canvas.before:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            size: self.size
            pos: self.pos
    WelcomeScreen:
    MainScreen:
    InventoryScreen:


<WelcomeScreen>:
    name: "First"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "Images/First.png"
    BoxLayout:
        orientation: "vertical"
        id: LY1
        padding: (100,100)
        spacing: 50
        size_hint: (1,1)

<MainScreen>:
    name: "Second"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "Images/Menu.jpg"
    BoxLayout:
        id: LY2
        orientation: "vertical"
        padding: (0,10)
        spacing: 10
        pos_hint: {"center_x": .35,"center_y": .8}
        size_hint: (.7,.4)

<InventoryScreen>:
    name: "Third"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "Images/inventory_screen.png"