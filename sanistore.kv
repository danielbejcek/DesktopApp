<WindowManager>:
    WelcomeScreen:
    MainScreen:
    InventoryScreen:
    ImportScreen:


<WelcomeScreen>:
    name: "First"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "Images/First.png"
    BoxLayout:
        orientation: "vertical"
        id: LY1
        padding: (100,100)
        spacing: 50
        size_hint: (1,1)

<MainScreen>:
    name: "Second"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "Images/Menu.jpg"
    BoxLayout:
        id: LY2
        orientation: "vertical"
        padding: (0,10)
        spacing: 10
        pos_hint: {"center_x": .25,"center_y": .8}
        size_hint: (.45,.25)

<InventoryScreen>:
    name: "Third"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "Images/inventory_screen.png"
    FloatLayout:
        id: LY3
        orientation: "vertical"
        padding: (0,0)
        spacing: 0



    ScrollView:
        do_scroll_x: False
        do_scroll_y: True
        scroll_type: ["content"]
        size_hint: (.4, 0.8)

        GridLayout:
            id: LY4
            orientation: "lr-tb"
            cols: 2
            padding: (50,1,10,100)
            spacing: (0,1)
            pos_hint: {"center_x": .1,"center_y": .8}
            size_hint: (1,None)

