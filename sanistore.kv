<WindowManager>:
    WelcomeScreen:
    MainScreen:
    InventoryScreen:
    ImportScreen:


<WelcomeScreen>:
    name: "First"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "Images/First.png"
    BoxLayout:
        orientation: "vertical"
        id: LY1
        padding: (100,100)
        spacing: 50
        size_hint: (1,1)

<MainScreen>:
    name: "Second"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "Images/Menu.jpg"
    BoxLayout:
        id: LY2
        orientation: "vertical"
        padding: (0,10)
        spacing: 10
        pos_hint: {"center_x": .25,"center_y": .8}
        size_hint: (.45,.25)

<InventoryScreen>:
    name: "Third"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "Images/inventory_screen_2.png"
    FloatLayout:
        id: LY3
        orientation: "vertical"
        padding: (0,0)
        spacing: 0



    ScrollView:
        id: SW1
        bar_width: 0
        bar_color: (0,0,0,0)
        do_scroll_x: False
        do_scroll_y: True
        scroll_type: ["content"]
        size_hint: (.48, .8)

        GridLayout:
            id: LY4
            orientation: "lr-tb"
            padding: (0,0,10,50)
            spacing: (0,0)
            pos_hint: {"center_x": .2,"center_y": .8}
            size_hint: (1,None)
            height: self.minimum_height

    GridLayout:
        id: LY5
        orientation: "lr-tb"
        cols: 4
        padding: (0,120,20,0)
        spacing: (0,15)
        pos_hint: {"center_x": .25,"center_y": .5}
        size_hint: (.45,.8)


<ImportScreen>:
    name: "Fourth"
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
            source: root.source_image_1




    FloatLayout:
        id: LYimage
        size_hint: (1,.9)
        pos_hint: {"center_x": .5, "center_y": .5}

    FloatLayout:
        id: LY6

        GridLayout:
            id: LY65
            cols: 2
            padding: (0,0,0,0)
            size_hint: (.8,.6)
            pos_hint: {"center_x": .5, "center_y": .5}

    BoxLayout:
        id: LY7
        orientation: "vertical"
        size_hint: (.54,.54)
        pos_hint: {"center_x": .21, "center_y": .53}
        canvas.before:
            Color:
                rgba: 0,0,1,0
            Line:
                width: 5
                rectangle: self.x, self.y, self.width, self.height

