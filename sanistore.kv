<WindowManager>:
    canvas.before:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            size: self.size
            pos: self.pos
    WelcomeScreen:
    MainScreen:
    InventoryScreen:
    ImportScreen:


<WelcomeScreen>:
    name: "First"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "Images/First.png"
    BoxLayout:
        orientation: "vertical"
        id: LY1
        padding: (100,100)
        spacing: 50
        size_hint: (1,1)

<MainScreen>:
    name: "Second"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "Images/Menu.jpg"
    BoxLayout:
        id: LY2
        orientation: "vertical"
        padding: (0,10)
        spacing: 10
        pos_hint: {"center_x": .25,"center_y": .8}
        size_hint: (.45,.25)

<InventoryScreen>:
    name: "Third"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "Images/inventory_screen.png"
    BoxLayout:
        id: LY3
        orientation: "vertical"
        padding: (0,0)
        spacing: 0
        pos_hint: {"center_x": .95,"center_y": .1}
        size_hint: (.12,.11)


    ScrollView:
        do_scroll_x: False
        do_scroll_y: True
        scroll_type: ["content"]
        size_hint: (.3, 0.8)

        GridLayout:
            id: LY4
            orientation: "lr-tb"
            cols: 2
            padding: (300,10,100,100)
            spacing: (400,50)
            pos_hint: {"center_x": .1,"center_y": .8}
            size_hint: (1,None)
